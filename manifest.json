{
    "name": "Redsave",
    "description": "Easily download Reddit media",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting",
        "downloads"
    ],
    "host_permissions": [
      "*://*.reddit.com/*"
    ],  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
      }
    },
    "icons": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.reddit.com/*"],
            "js": ["request.js"]
        }
    ]
}